{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "name": "{{name}}",
  "description": "{{description}}",
  "mainEntity": [
  {{#each topics}}
    {
      "@type": "Question",
      "name": "{{question}}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{answer}}"
      }
    }{{#unless last}},{{/unless}}
  {{/each}}
  ]
}